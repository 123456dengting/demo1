{
  "manifest_version": 2,
  "name": "LinkID自动生成-新",
  "description": "自动生成用于广告追踪的LinkID信息",
  "version": "2.0",
  "permissions": [
    "tabs","<all_urls>","downloads","storage","clipboardRead","clipboardWrite","activeTab"
    ],
  "icons": {
    "48" : "icon_48.png",
    "128" : "icon_128.png"
  },
  "background": {
    "persistent": true,
    "scripts": ["./js/functions.js","./js/back.js"]
  },
 "browser_action": {
    "default_title": "LinkID自动生成"
  },  
   "content_scripts":  [
		{
			"matches": ["https://business.facebook.com/ads/manager/*"],
			"js": ["./js/functions.js","./js/facebook_editor.js"],
			"run_at": "document_end",
			"comment":"facebook信息获取"
		},
		{
			"matches": ["https://business.facebook.com/ads/manage/powereditor/*","https://www.facebook.com/ads/manage/powereditor/*","https://business.facebook.com/adsmanager/*"],
			"js": ["./js/functions.js","./js/facebook_powereditor.js"],
			"run_at": "document_end",
			"comment":"facebook信息获取"
		}
    ],
  "web_accessible_resources": ["*.*","./js/*.*"]    
}
